<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xmlns:context="http://www.springframework.org/schema/context"
 xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />
	<context:component-scan base-package="org.anaolabs" annotation-config="true" />
	
	<bean id="pommeEater" class="org.anaolabs.spring.orange.instantiating.PommeEater" scope="singleton"/>
	
	<bean id="orangeEater" class="org.anaolabs.spring.orange.instantiating.OrangeEater" scope="singleton"/>

</beans>